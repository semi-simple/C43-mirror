#!/bin/bash

PATH=$PATH:/opt/local/include/
PATH=$PATH:/opt/local/
PATH=$PATH:/Users/jacomostert/Documents/WP43S/DM42/gcc-arm-none-eabi-8-2019-q3-update/bin
#PATH=$PATH:/Users/jacomostert/Documents/WP43S/DM42/gcc-arm-none-eabi-10-2020-q2-preview/bin

PATH=$PATH:./bin:/arm-eabi/bin

